APP_NAME="Telegram Bot"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Redis (used for cache, queue, and rate limiting)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90
QUEUE_FAILED_DRIVER=file

# Telegram Bot (get token from @BotFather)
TELEGRAM_BOT_TOKEN=

# Rate limits (Telegram: 30 msg/s global, we use 20 msg/min per chat)
TELEGRAM_GLOBAL_LIMIT_PER_SECOND=30
TELEGRAM_CHAT_LIMIT_PER_MINUTE=20
